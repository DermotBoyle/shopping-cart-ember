{{#if this.hasItemBeenAdded}}
  <button
    type="button"
    class="bg-violet-50 text-base leading-6 text-violet-700 font-bold py-2 px-2 rounded"
  >
    Remove from cart
  </button>
{{else}}
<button
 type="button"
  class="bg-violet-50 text-base leading-6 text-violet-700 font-bold py-2 px-2 rounded"
  {{on "click" this.addToEmptyCart}}
  >
  Add to cart
</button>
{{/if}}
